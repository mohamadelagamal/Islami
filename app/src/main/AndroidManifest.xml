<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.islami">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo2"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Islami_mvvm">
        <activity
            android:name="islami.ui.hades.details.DetailsHadesActivity"
            android:exported="false"
            android:parentActivityName="islami.ui.hades.details.DetailsHadesActivity"/>
        <activity
            android:name="islami.ui.quran.details.DetailsActivity"
            android:exported="false"
            android:parentActivityName="islami.ui.home.HomeActivity" />
        <activity
            android:name="islami.ui.home.HomeActivity"
            android:exported="true"
            android:theme="@style/splashScreenTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>