<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/head"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintHeight_percent=".2"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/body_OF_sebha"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/body"
        android:layout_marginTop="183dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="عددالتسبيحات"
        android:textSize="25sp"
        android:id="@+id/numberSebha"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/body_OF_sebha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sebha_counter"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/shap_sebha"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/numberSebha"
        android:textColor="@color/black"
        tools:text="8"
        android:textSize="30sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سبحان الله"
        android:id="@+id/sebha_text"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/sebha_counter"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>